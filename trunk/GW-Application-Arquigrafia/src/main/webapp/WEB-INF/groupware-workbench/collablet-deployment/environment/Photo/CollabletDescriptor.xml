            <role name="Administrador" defaultAssigment="false">
                <entity entity="br.org.groupware_workbench.collabElement.coord.userMgr.User" param="admin" />
            </role>
            <role name="User" defaultAssigment="true">
                <entity entity="br.org.groupware_workbench.collabElement.coord.userMgr.User" param="user01" />
